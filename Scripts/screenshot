#!/bin/sh

# Nicolai Brand (lytixdev) 2021-2022

dir="$HOME/Pictures/screenshots"

mkdir -p $dir
name="$dir/$(date +"%Y-%m-%d-%H%M%S").png"

scrot -F $name #&& notify-send -t 1000 "Took screenshot succesfully"
echo $name | xclip -selection "clipboard"

#cd $dir && scrot && notify-send -t 1000 "Took screenshot succesfully" || notfy-send -t 1000 "Screenshot failed"
