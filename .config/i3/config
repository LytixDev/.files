# shortcuts 
set $exnosup exec --no-startup-id
set $exallnosup exec_always --no-startup-id
set $scriptdir /home/nic/Scripts
#set $home /home/nic

# set mod key to windows key
set $mod Mod4

# font bar
font pango:monospace 13
#font pango:monospace 28

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
$exnosup xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
$exnosup nm-applet

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# dropdown menus
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 700 400
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 5
$exnosup kitty --name dropdown

for_window [instance="cmus"] floating enable
for_window [instance="cmus"] resize set 1000 600
for_window [instance="cmus"] move scratchpad
for_window [instance="cmus"] border pixel 5
$exnosup kitty --name cmus cmus

# keybindings
bindsym $mod+Return $exnosup kitty
bindsym $mod+b $exnosup firefox
bindsym $mod+c $exnosup chromium
bindsym $mod+s $exnosup $scriptdir/screenshot
bindsym $mod+q kill
bindsym $mod+d $exnosup i3-dmenu-desktop

# dropdown menu
bindsym $mod+t [instance="dropdown"] scratchpad show; [instance="dropdown"] move position 1170 750
bindsym $mod+y [instance="cmus"] scratchpad show; [instance="cmus"] move position center

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+Ctrl+h split h

# split in vertical orientation
bindsym $mod+Ctrl+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Polybar launch script
#exec_always --no-startup-id /home/nic/.config/polybar/launch.sh

# i3blocks bar
bar {
    position top
    status_command i3blocks
    colors {
        background #1E292F
    }
}

# wallpaper
set $wallpaper /home/nic/Pictures/wallpapers/favorites/nice.jpg
$exallnosup feh --bg-fill $wallpaper

# i3lock script
set $i3lockwall sh $scriptdir/lock

# shutdown / restart / suspend...
set $mode_system System (l) lock, (e) logout, (r) reboot, (h) hibernate, (CTRL+s) shutdown

mode "$mode_system" {
    bindsym l $exnosup $i3lockwall, mode "default"
    bindsym e $exnosup i3-msg exit, mode "default"
    bindsym r $exnosup systemctl reboot, mode "default"
    bindsym h $exnosup $i3lockwall && systemctl hibernate, mode "default"
    bindsym Ctrl+s $exnosup systemctl poweroff -i, mode "default"

    bindsym Escape mode "default"
}

bindsym $mod+Ctrl+q mode "$mode_system"

# keyboard layout
$exallnosup setxkbmap -layout no

# for memes
$exallnosup notify-send "Welcome back, Nicolai"

# startup programs
$exnosup picom
$exnosup dunst
$exallnosup $scriptdir/btcprice
$exnosup $scriptdir/setmonitors

# gaps
#gaps outer 10
#gaps inner 15
gaps outer 0
gaps inner 0

new_window pixel 3

# sound
bindsym $mod+u $exnosup $scriptdir/change-volume 5 
bindsym $mod+i $exnosup $scriptdir/change-volume -5
bindsym $mod+m $exnosup $scriptdir/toggle-volume
bindsym XF86AudioRaiseVolume $exnosup $scriptdir/change-volume 5
bindsym XF86AudioLowerVolume $exnosup $scriptdir/change-volume -5
bindsym XF86AudioMute $exnosup $scriptdir/toggle-volume

# backlight
bindsym $mod+Ctrl+u $exnosup $scriptdir/change-backlight 10
bindsym $mod+Ctrl+i $exnosup $scriptdir/change-backlight -10
bindsym XF86MonBrightnessUp $exnosup $scriptdir/change-backlight 10
bindsym XF86MonBrightnessDown $exnosup $scriptdir/change-backlight -10
